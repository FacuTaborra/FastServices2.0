{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "cwd": "${workspaceFolder}/services/src",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "console": "integratedTerminal",
            "jinja": true
        },
        {
            "name": "Start Expo (Android)",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}/apps/mobile",
            "env": {
                "EXPO_DEVTOOLS_LISTEN_ADDRESS": "0.0.0.0"
            }
        },
        {
            "name": "Start Expo (iOS)",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run start-tunnel",
            "cwd": "${workspaceFolder}/apps/mobile",
            "env": {
                "EXPO_DEVTOOLS_LISTEN_ADDRESS": "0.0.0.0"
            }
        }
    ],
    "compounds": [
        {
            "name": "Start Full Development (Android)",
            "configurations": [
                "Debug FastAPI",
                "Start Expo (Android)"
            ],
            "stopAll": true
        },
        {
            "name": "Start Full Development (iOS)",
            "configurations": [
                "Debug FastAPI",
                "Start Expo (iOS)"
            ],
            "stopAll": true
        },
        {
            "name": "Start Full Development",
            "configurations": [
                "Debug FastAPI",
                "Start Expo (Android)"
            ],
            "stopAll": true
        }
    ]
}