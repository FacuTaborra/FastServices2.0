{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start FastAPI Server",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"uvicorn",
				"main:app",
				"--reload",
				"--host",
				"0.0.0.0",
				"--port",
				"8000"
			],
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/services/src"
			},
			"problemMatcher": []
		},
		{
			"label": "Start Expo Dev Server",
			"type": "shell",
			"command": "npx",
			"args": [
				"expo",
				"start"
			],
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/apps/mobile"
			},
			"problemMatcher": []
		},
		{
			"label": "Start Both Services",
			"dependsOrder": "parallel",
			"dependsOn": [
				"Start FastAPI Server",
				"Start Expo Dev Server"
			],
			"group": "build"
		}
	]
}